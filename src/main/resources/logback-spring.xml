<?xml version="1.0" encoding="UTF-8"?>
	<configuration>
	 
<!-- 	    <property name="LOGS" value="/Users/utilisateur/eclipse-workspace/meteo/logback" /> -->
<!-- 	    <property name="LOG_PATH" value="${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}}" /> -->
	 	<springProfile name="dev">
	 		<property name="CHEMIN" value="${/Users/utilisateur/eclipse-workspace/meteo/logback:-./tmplogs}" />
			<appender name="Console"
	        class="ch.qos.logback.core.ConsoleAppender">
	        <layout class="ch.qos.logback.classic.PatternLayout">
	            <Pattern>%black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %gray(%C{1.}): %msg%n%throwable</Pattern>
	        </layout>
	    	</appender>
	    	<appender name="RollingFile"
		        class="ch.qos.logback.core.rolling.RollingFileAppender">
		        <file>${CHEMIN}/meteo.log</file>
		        <encoder
		            class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
		            <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
		        </encoder>
		 
		        <rollingPolicy
		            class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		            <!-- rollover daily and when the file reaches 10 MegaBytes -->
		            <fileNamePattern>${CHEMIN}/archived/spring-boot-logger-%d{yyyy-MM-dd}.%i.log
		            </fileNamePattern>
		            <timeBasedFileNamingAndTriggeringPolicy
		                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
		                <maxFileSize>10MB</maxFileSize>
		            </timeBasedFileNamingAndTriggeringPolicy>
		        </rollingPolicy>
		    </appender>
		     <!-- LOG everything at INFO level -->
	    <root level="debug">
	        <appender-ref ref="RollingFile" />
	        <appender-ref ref="Console" />
	    </root>
	 
	    <!-- LOG "com.baeldung*" at TRACE level -->
	    <logger name="com.thsrms.meteo" level="debug" additivity="false">
	        <appender-ref ref="RollingFile" />
	        <appender-ref ref="Console" />
	    </logger>
		</springProfile>
		
		<springProfile name="prod">
    		<property name="CHEMIN" value="${/opt/tomcat/latest/logs/meteo:-./tmplogs}" />
	    	<appender name="Console"
	        class="ch.qos.logback.core.ConsoleAppender">
	        <layout class="ch.qos.logback.classic.PatternLayout">
	            <Pattern>%black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %gray(%C{1.}): %msg%n%throwable</Pattern>
	        </layout>
	    	</appender>
		    <appender name="RollingFile"
		        class="ch.qos.logback.core.rolling.RollingFileAppender">
		        <file>/opt/tomcat/latest/logs/meteo.log</file>
		        <encoder
		            class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
		            <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
		        </encoder>
		 
		        <rollingPolicy
		            class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		            <!-- rollover daily and when the file reaches 10 MegaBytes -->
		            <fileNamePattern>/opt/tomcat/latest/logs/archived/spring-boot-logger-%d{yyyy-MM-dd}.%i.log
		            </fileNamePattern>
		            <timeBasedFileNamingAndTriggeringPolicy
		                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
		                <maxFileSize>10MB</maxFileSize>
		            </timeBasedFileNamingAndTriggeringPolicy>
		        </rollingPolicy>
		    </appender>
		    <root level="error">
	        <appender-ref ref="RollingFile" />
	        <appender-ref ref="Console" />
	    </root>
	 
	    <!-- LOG "com.baeldung*" at TRACE level -->
	    <logger name="com.thsrms.meteo" level="error" additivity="false">
	        <appender-ref ref="RollingFile" />
	        <appender-ref ref="Console" />
	    </logger>
		</springProfile>
	 	
	 	
	 	
	    
	   
	 
	</configuration>